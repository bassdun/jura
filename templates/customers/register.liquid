{% comment %}
  Enhanced Registration Template for Vessel Theme
  Includes email domain validation and automatic customer tagging
{% endcomment %}

<div class="section section--full-width">
  <div class="page-width">
    <div class="customer-register">
      <div class="customer-register__header">
        <h1 class="customer-register__title">Create Your Account</h1>
        <p class="customer-register__subtitle">
          Join our exclusive members-only store to access special pricing and collections.
        </p>
      </div>

      {% if form.errors %}
        <div class="form-errors">
          <h2 class="form-errors__title">Please correct the following:</h2>
          <ul class="form-errors__list">
            {% for error in form.errors %}
              <li class="form-errors__item">{{ error }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {% form 'create_customer', novalidate: 'novalidate' %}
        <div class="form-fields">
          <div class="form-field">
            <label for="RegisterForm-FirstName" class="form-label">
              First Name <span class="required">*</span>
            </label>
            <input
              type="text"
              name="customer[first_name]"
              id="RegisterForm-FirstName"
              class="form-input"
              autocomplete="given-name"
              placeholder="Enter your first name"
              value="{{ form.first_name }}"
              required
            >
          </div>

          <div class="form-field">
            <label for="RegisterForm-LastName" class="form-label">
              Last Name <span class="required">*</span>
            </label>
            <input
              type="text"
              name="customer[last_name]"
              id="RegisterForm-LastName"
              class="form-input"
              autocomplete="family-name"
              placeholder="Enter your last name"
              value="{{ form.last_name }}"
              required
            >
          </div>

          <div class="form-field">
            <label for="RegisterForm-email" class="form-label">
              Email Address <span class="required">*</span>
            </label>
            <input
              type="email"
              name="customer[email]"
              id="RegisterForm-email"
              class="form-input"
              autocomplete="email"
              placeholder="Enter your email address"
              value="{{ form.email }}"
              required
            >
            <div id="email-validation" class="email-validation" style="display: none;"></div>
          </div>

          <div class="form-field">
            <label for="RegisterForm-password" class="form-label">
              Password <span class="required">*</span>
            </label>
            <input
              type="password"
              name="customer[password]"
              id="RegisterForm-password"
              class="form-input"
              autocomplete="new-password"
              placeholder="Create a secure password"
              required
            >
          </div>

          <div class="form-field form-field--checkbox">
            <label for="RegisterForm-accepts-marketing" class="checkbox-label">
              <input
                type="checkbox"
                name="customer[accepts_marketing]"
                id="RegisterForm-accepts-marketing"
                class="checkbox-input"
                value="1"
              >
              <span class="checkbox-custom"></span>
              <span class="checkbox-text">
                I would like to receive exclusive offers and updates via email
              </span>
            </label>
          </div>

          <!-- Hidden field for auto-tagging based on email domain -->
          <input type="hidden" name="customer[tags]" id="customer-tags" value="">

          <div class="form-actions">
            <button type="submit" class="button button--primary" id="register-submit">
              Create Account
            </button>
          </div>
        </div>
      {% endform %}

      <div class="customer-register__footer">
        <p class="customer-register__login">
          Already have an account? 
          <a href="/account/login">Login here</a>
        </p>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const emailInput = document.getElementById('RegisterForm-email');
  const emailValidation = document.getElementById('email-validation');
  const customerTags = document.getElementById('customer-tags');
  const submitButton = document.getElementById('register-submit');
  
  // Allowed email domains and their corresponding tags
  const allowedDomains = {
    'trumanorange.com': 'staff',
    'company.com': 'staff',
    'warehouse.com': 'warehouse',
    'vip.com': 'vip',
    'friends.com': 'friends-family'
  };
  
  // Email validation function
  function validateEmail() {
    const email = emailInput.value.toLowerCase();
    const domain = email.split('@')[1];
    
    if (!email || !domain) {
      emailValidation.style.display = 'none';
      customerTags.value = '';
      submitButton.disabled = false;
      return;
    }
    
    emailValidation.style.display = 'block';
    
    if (allowedDomains[domain]) {
      emailValidation.className = 'email-validation email-validation--valid';
      emailValidation.innerHTML = `✅ Valid email domain. You will be registered as: <strong>${allowedDomains[domain]}</strong>`;
      customerTags.value = allowedDomains[domain];
      submitButton.disabled = false;
    } else {
      emailValidation.className = 'email-validation email-validation--invalid';
      emailValidation.innerHTML = `❌ Email domain not authorized. Please use an approved email address or contact support.`;
      customerTags.value = '';
      submitButton.disabled = true;
    }
  }
  
  // Validate on input
  emailInput.addEventListener('input', validateEmail);
  emailInput.addEventListener('blur', validateEmail);
  
  // Initial validation
  if (emailInput.value) {
    validateEmail();
  }
});
</script>

